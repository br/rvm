# figure out the project root under which bin, lib live
rhome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/../.." && pwd -P)"

if [[ -f /etc/profile.d/rvm.sh ]]; then
  source /etc/profile.d/rvm.sh
else
  source $rhome/.rvm/scripts/rvm
fi

unset rhome

if [[ "$#" != = ]]; then
  rvm "$@"
fi

unset gem
unset cd
